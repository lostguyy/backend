            </div>
        </nav>
    
        <div class="container">
            <div class="row py-5">
                <h3>RESERVATION _____________</h3>
                <h1>Book a Table</h1>
                <form class="row g-3" action="/bookTable" method="POST">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" placeholder="Name" class="form-control" id="name">
                    </div>
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" name="email" placeholder="Email" class="form-control" id="inputEmail4">
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label">Enter your phone number:</label>
                        <input type="tel" placeholder="0312-3456789" class="form-control" id="phone" name="phone">
                    </div>
                    <div class="col-md-6">
                        <label for="date" class="form-label">Enter your date of reservation:</label>
                        <input type="date" placeholder="" class="form-control" id="date" name="date">
                    </div>
                    <div class="col-md-12">
                        <label for="comments" class="form-label">Comments</label>
                        <textarea class="form-control" name="comments" placeholder="Special Note" id="comments" style="height: 120px"></textarea>
                    </div>
                    <div class="col-12">
                        <button class="btn" type="submit" id="signUp" Style="margin-top: 12px">BOOK A TABLE</button>
                    </div>
                </form>
    
            </div>
        </div>
    </div>
    

